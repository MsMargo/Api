@model MedicalApp.Models.ViewModel.PatientFilter
   
<script src="~/Scripts/SearchPatient.js"></script>

    @using (@Html.BeginForm("SearchPatient", "Administration", FormMethod.Get, new { @class = "form-horizontal", id = "searchForm" }))
    {
        <div class="form-group">
            <label for="inputFirstName" class="col-sm-2 control-label">First Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.FirstName, null, new { @class = "form-control", id = "searchFirstName", placeholder = "First Name" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputLastName" class="col-sm-2 control-label">Last Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.LastName, null, new { @class = "form-control", id = "searchLastName", placeholder = "Last Name" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputPesel" class="col-sm-2 control-label">Pesel</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Pesel, null, new { @class = "form-control", id = "searchPesel", placeholder = "Pesel" })
            </div>
        </div>

        <div id="tableContainer" style="display:none">
            <div id="demo">
                <h4>Patients list</h4>
                <table id="myDataTable" class="display">
                    <thead>
                        <tr>
                            <th>Select</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Pesel</th>
                            <th>City</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>

        <input type="hidden" id="selectedPatientId" value="" />

        <div class="my-modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal" id="btnClose">Close</button>
            <button type="button" class="btn btn-info" id="btnSearch" onclick="">Search</button>

            <button type="button" class="btn btn-primary" data-dismiss="modal" id="btnSelect">Select</button>
        </div>
    }
