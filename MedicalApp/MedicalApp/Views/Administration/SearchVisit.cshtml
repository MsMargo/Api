@model MedicalApp.Models.ViewModel.VisitFilter

<script src="~/Scripts/SearchVisit.js"></script>

@using (@Html.BeginForm("SearchVisit", "Administration", FormMethod.Get, new { @class = "form-horizontal"}))
{
    <div class="form-group">
        <label for="selectDoctor" class="col-sm-2 control-label">Doctor Name</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.DoctorName, (IEnumerable<SelectListItem>)ViewBag.DoctorNames, new { @class = "form-control", id = "selectDoctor"})
        </div>
    </div>

    <div class="form-group">
        <label for="selectDate" class="col-sm-2 control-label">Visite Date</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.VisitDate, new { @class = "form-control", id = "selectDate" })
        </div>
    </div>

    <div id="visitTableContainer" style="display:none;">
        <div id="demo2">
            <table id="visitTable" class="display" style="max-width: 400px; width:inherit">
                <thead>
                    <tr>
                        <th>Doctor Name</th>
                        <th>Medical specialization</th>
                        <th>Visite date</th>
                        <th>Descriptions</th>
                        <th>Patient Name</th>
                        <th>Patient Home City</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

    <div class="my-modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-info" id="btnSearchVisit">Search</button>
    </div>
}




