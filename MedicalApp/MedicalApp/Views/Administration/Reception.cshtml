@using MedicalApp.Models.Enums;
@model MedicalApp.Models.ViewModel.ReceptionViewModel

<script type="text/javascript" src="~/Scripts/Reception.js"></script>
@{
    ViewBag.Title = "Reception";
}

<h2>Please enter a data about visit:</h2>

<form>
    <hr />
    <label>Patient</label>
    <br />
    <div class="btn-group" style="width:12%">
        <button type="button" id="searchPatient" class="btn btn-default" style="width:90%">
            <span class="glyphicon glyphicon-search"></span> Search
        </button>
    </div>
    <div class="btn-group" style="width:12%">
        <button type="button" id="newPatient" class="btn btn-default" style="width:90%">
            <span class="glyphicon glyphicon-plus"></span> New
        </button>
    </div>
</form>
<hr />


@using (@Html.BeginForm("Reception", "Administration", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.PatientId, new { id = "patientId" })
    <div class="form-group">
        <label for="PatientFirstName" class="col-sm-2 control-label">Patient First Name</label>
        <div class="col-sm-10">
            @Html.TextBox("PatientFirstName", null, new { @class = "form-control", id = "patientFirstName", placeholder = "Patient First Name", disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <label for="PatientLastName" class="col-sm-2 control-label">Patient Last Name</label>
        <div class="col-sm-10">
            @Html.TextBox("PatientLastName", null, new { @class = "form-control", id = "patientLastName", placeholder = "Patient Last Name", disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <label for="PatientPesel" class="col-sm-2 control-label">Patient Pesel</label>
        <div class="col-sm-10">
            @Html.TextBox("PatientPesel", null, new { @class = "form-control", id = "patientPesel", placeholder = "Pesel", disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputMedicalSpecializations" class="col-sm-2 control-label">Medical Specialization</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.MedicalSpecializationId, (IEnumerable<SelectListItem>)ViewBag.DoctorSpecializations,
         new { @class = "form-control", id = "inputMedicalSpecializations", disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputFirstName" class="col-sm-2 control-label">Doctor's Name</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.DoctorId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control", id = "inputDoctorName", disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        <label for="inputVisiteDate" class="col-sm-2 control-label">Visite Date</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.VisiteDate, new { @class = "form-control", id = "datepicker", disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputVisiteDate" class="col-sm-2 control-label">Visite Time</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.VisiteTime, Enumerable.Empty<SelectListItem>(), new { @class = "form-control", id = "visiteTime", disabled = "disabled" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputDescriptions" class="col-sm-2 control-label">Descriptions</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.Description, 5, 10, new { @class = "form-control", id = "inputDescription", placeholder = "Descriptions" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="button" class="btn btn-info" id="btnVisitList">Show all visits</button>
            <button type="submit" class="btn btn-primary" id="btnAddVisit">Add visit</button>
        </div>
    </div>
}

