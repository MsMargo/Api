@model int

<div id="details" class="hideAfterStart">

    <input type="hidden" value="@Model" id="userId">

    <div>
        <h3>All posts of selected user: <b id="allPostsCount"></b></h3>
    </div>

    <button type="button" id="btnBack" class="btn btn-info"><span class="glyphicon glyphicon-chevron-left"></span>Back</button>

    <table class="table table-hover" id="userDetails">
        <thead>
            <tr>
                <th>
                    Post and comments
                </th>
                <th>
                    Statistics
                </th>
            </tr>
        </thead>
    </table>

    <div class="modal fade" id="modalStatistic" tabindex="-1" role="dialog" aria-labelledby="searchPatietLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="width:690px">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Top 10 words in posts and comments</h4>
                </div>
                <div class="modal-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Word
                                </th>
                                <th>
                                    Count
                                </th>
                            </tr>
                        </thead>
                        <tbody id="statisticPost"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="~/Scripts/details.js"></script>

